.cardSwiper .swiper-item {
  width: 76% !important;
  overflow: initial;
}
.cardSwiper .swiper-item > view {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 38rpx;
  -webkit-transform: scale(0.75, 0.86);
          transform: scale(0.75, 0.86);
  opacity: 1;
  -webkit-transition: all 0.2s ease-in 0s;
  transition: all 0.2s ease-in 0s;
  overflow: hidden;
  box-sizing: border-box;
}
.cardSwiper .cur {
  margin-left: 40rpx;
}
.cardSwiper .cur view {
  -webkit-transform: initial;
          transform: initial;
  opacity: 1;
  -webkit-transition: all 0.2s ease-in 0s;
  transition: all 0.2s ease-in 0s;
}
.swiper-item view {
  height: 100%;
  width: 100%;
  position: relative;
}
.swiperText {
  position: absolute;
  color: #ffffff;
  z-index: 2;
  border-radius: 4rpx;
  padding: 0 4rpx;
}
.screen-swiper image {
  width: 100%;
  border-radius: 38rpx;
  box-shadow: 0 2px 12px 0 #f0f0f0;
}
.screen-swiper video,
.swiper-item video {
  width: 100%;
  display: block;
  height: 100%;
}
.swiperContent {
  width: 100%;
}
.swiper-item-footer {
  position: absolute !important;
  left: 0;
  bottom: 42px;
  width: 100% !important;
  height: auto !important;
  background: #fff;
  padding: 15px 16px;
  z-index: 9;
  box-shadow: 0 2px 16px 0 #e9ecef;
}
.cardSwiper .cur .swiper-item-footer {
  bottom: 12px;
}
.footer-name {
  font-size: 15px;
  font-weight: bold;
}
.footer-info {
  border-radius: 0 !important;
  margin-top: 11px;
  font-size: 12px;
  color: #AAAAAA;
}
.footer-rate {
  display: -webkit-box !important;
  display: -webkit-flex !important;
  display: flex !important;
  -webkit-box-align: center !important;
  -webkit-align-items: center !important;
          align-items: center !important;
  height: 20px !important;
}

