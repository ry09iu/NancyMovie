
.cardSwiper .swiper-item {
		width: 84% !important;
		/* margin-left: 42rpx; */
		overflow: initial;
}
	
/* 	.cardSwiper .swiper-item:first-child {
		margin-left: 32rpx;
	} */
.cardSwiper .swiper-item view {
		width: 100%;
		display: block;
		height: 100%;
		border-radius: 38rpx;
		-webkit-transform: scale(0.79, 0.86);
		        transform: scale(0.79, 0.86);
		opacity: 0.7;
		-webkit-transition: all 0.2s ease-in 0s;
		transition: all 0.2s ease-in 0s;
		overflow: hidden;
		box-sizing: border-box;
		/* margin-left: 3%; */
}
.cardSwiper .cur {
		margin-left: 34rpx;
}
.cardSwiper .cur view {
		-webkit-transform: initial;
		        transform: initial;
		opacity: 1;
		-webkit-transition: all 0.2s ease-in 0s;
		transition: all 0.2s ease-in 0s;
}
.swiper-item view {
		height: 100%;
		width: 100%;
		position: relative;
}
.swiperText {
		position: absolute;
		color: #ffffff;
		z-index: 2;
		border-radius: 4rpx;
		padding: 0 4rpx;
}
.screen-swiper image {
		width: 100%;
}
.screen-swiper video,
	.swiper-item video {
		width: 100%;
		display: block;
		height: 100%;
}
.swiperContent {
		width: 100%;
}

